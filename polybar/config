[bar/main]
modules-right = pulseaudio battery date
modules-center = cpu memory
modules-left = eth0-network eth1-network wireless-network
font-0 = "Monospace:size=14:weight=bold;0"
background = #202020
module-margin = 2

[module/date]
type = internal/date
time = %H:%M
date = %Y-%m-%d%
format = <label>
label = %date% %time%

[module/pulseaudio]
type = internal/pulseaudio
use-ui-max = true
format-volume = volume <label-volume>
label-muted = muted
label-muted-foreground = #666
click-right = pavucontrol

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
time-format = %H:%M
format-charging = <label-charging>
format-discharging = <label-discharging>
label-charging = Charging %percentage%%
label-discharging = Discharging %percentage%%
label-full = Fully charged
label-low = BATTERY LOW

[module/wireless-network]
type = internal/network
interface = wlan0
format-connected = <label-connected>
format-disconnected = <label-disconnected>
label-connected = %essid% %downspeed:9%
label-connected-foreground = #eefafafa
label-disconnected = not connected
label-disconnected-foreground = #66ffffff

[module/eth0-network]
type = internal/network
interface = eth0
format-connected = eth0 <label-connected>
format-disconnected = eth0 <label-disconnected>
label-connected = %downspeed:9%
label-connected-foreground = #eefafafa
label-disconnected = not connected
label-disconnected-foreground = #66ffffff

[module/eth1-network]
type = internal/network
interface = eth1
format-connected = eth1 <label-connected>
format-disconnected = eth1 <label-disconnected>
label-connected = %downspeed:9%
label-connected-foreground = #eefafafa
label-disconnected = not connected
label-disconnected-foreground = #66ffffff

[module/cpu]
type = internal/cpu
format = <label>
label = cpu %percentage%%

[module/memory]
type = internal/memory
label = mem %gb_used% / %gb_total%

